<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ArtisticCategory">

    <androidx.recyclerview.widget.RecyclerView
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/wallpaper_items"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:paddingBottom="@dimen/_60sdp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/ic_scroll"
        android:id="@+id/artisticRecycler"/>

    <ProgressBar
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_color"
        android:background="@drawable/progress_bg"
        android:layout_gravity="center"
        android:id="@+id/artisticProgress"
        />
</FrameLayout>